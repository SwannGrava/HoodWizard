            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-neon-inverse" href="{{ path('app_categorie_new') }}">Créer une nouvelle categorie</a>
{% endblock %}
